{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.death": {
			"initial_state": "initialization",
			"states": {
				"initialization": {
					"transitions": [
						{
							"has_died": "!q.is_alive"
						}
					],
					"on_exit": [
						"v.delay = 0.2 + q.life_time;",
						"/say Hi"
					]
				},
				"has_died": {
					"on_exit": ["/say BYE"],
					"transitions": [
						{
							"initialization": "q.is_alive && (q.life_time >= v.delay)"
						}
					]
				}
			}
		}
	}
}
